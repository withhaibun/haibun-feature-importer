{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*ts"
  ],
  "exclude": [
    "./jest.config.ts",
    "./build",
    "./ndoe_modules"
  ]
}